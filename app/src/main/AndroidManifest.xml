<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.karmarkarsourabh.surat_job_expo">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_surat_job"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_surat_job"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".splashScreen"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".Splash_anim_screen"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".Dashboard"
            android:label="@string/title_activity_dashboard"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Resume_theme"
            android:noHistory="true"
            android:parentActivityName=".Dashboard"
            android:screenOrientation="portrait" >

        </activity>
        <activity
            android:name=".CollegeRegistrationActivity"
            android:label="@string/clg_reg_str"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".CompanyRegistrationActivity"
            android:label="@string/cmp_reg"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".StudentRegistrationActivity"
            android:label="@string/stud_reg"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".College_Home"
            android:label="@string/title_activity_college__home"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StudentHomeActivity"
            android:label="@string/title_activity_student_home"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CollegeProfile"
            android:label="Profile"
            android:parentActivityName=".College_Home"
            android:screenOrientation="portrait" />
        <activity android:name=".MyParticipationDrives"
            android:screenOrientation="portrait"
            android:label="Campus Drive"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".StudentHomeActivity"></activity>
    </application>

</manifest>