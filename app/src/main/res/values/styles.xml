<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"
        >
    </style>

    <style name="AppTheme.PopupOverlay.JobPostDetails" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/lightblue</item>
    </style>

    <style name="AppTheme.AppBarOverlay.StudentParticipation" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/lightblue</item>
    </style>

    <style name="AppTheme.AppBarOverlay.JobPostDetails" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="popupMenuStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/steelblue</item>
        <item name="android:itemBackground">@color/white</item>
        <!--<item name="android:popupBackground">@android:color/white</item>-->
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">10dp</item>
    </style>
</resources>
