<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:id="@+id/cardView_job_fair_details">


            <FrameLayout
                android:id="@+id/frameLayout_studentHome_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_semi_shades">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/textView_job_post_detail_companyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="Company Name"
                        android:textColor="@color/StudentScreenFontColor"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/textView_job_post_detail_companyWeburl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font12"
                        android:text="Compnay weburl"
                        android:autoLink="web"
                        android:textColor="@color/StudentScreenFontColor"
                        />

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_locationjobdetails" />

                        <TextView
                            android:id="@+id/textView_job_post_detail_companyLocation"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font12"
                            android:text="Company location"
                            android:textColor="@color/StudentScreenFontColor"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_experiencejobdetails" />

                        <TextView
                            android:id="@+id/textView_job_post_detail_ExperianceWanted"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font12"
                            android:text="Experiance wanted"
                            android:textColor="@color/StudentScreenFontColor"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_descriptionjobdetails" />

                        <TextView
                            android:id="@+id/textView_job_post_detail_companyPostname"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font12"
                            android:text="PostName"
                            android:textColor="@color/StudentScreenFontColor"
                            />


                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>



        <android.support.constraint.ConstraintLayout
            android:id="@+id/dwn"
            android:layout_below="@+id/frameLayout_studentHome_image"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/steelblue"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/textView_studentHome_Drivename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_people"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.06"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.43" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Number of people applied"
                android:textColor="@color/white"
                android:textSize="@dimen/font15"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.58"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.55" />


            <TextView
                android:id="@+id/textView_job_post_detail_peopleApplied"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.96"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.39" />



        </android.support.constraint.ConstraintLayout>


</RelativeLayout>