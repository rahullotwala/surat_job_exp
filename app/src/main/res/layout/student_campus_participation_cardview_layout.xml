<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shomecard"
    android:layout_margin="20dp">

        <ImageView
            android:id="@+id/frameLayout_studentParticipation_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/drive_bg">
        </ImageView>

    <FrameLayout
        android:id="@+id/Frame_layout_campus_drive"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/frameLayout_studentParticipation_image"
        android:background="@color/StudentScreenFontColor"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_studentParticipation_Drivename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Campus Drive"
            android:textColor="@color/white"
            android:textSize="@dimen/font22"
            android:textStyle="bold" />


    </FrameLayout>


</RelativeLayout>