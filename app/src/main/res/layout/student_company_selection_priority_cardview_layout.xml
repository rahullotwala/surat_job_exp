<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/StudentScreenBackgroundColor">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageButton
            android:id="@+id/imageButton_studentCompanySelectionPriorityCardview_dragimg"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_participation"/>


        <TextView
            android:id="@+id/textview_studentCompanySelectionPriorityCardview_companyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/StudentScreenFontColor"
            android:text="Company name"
            android:textSize="@dimen/font22"
            android:textStyle="bold"
            android:layout_marginStart="25dp"
            app:layout_constraintStart_toEndOf="@id/imageButton_studentCompanySelectionPriorityCardview_dragimg"
            />

        <ImageView
            android:id="@+id/imageView_studentCompanySelectionPriorityCardview_locationimg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@id/imageButton_studentCompanySelectionPriorityCardview_dragimg"
            android:layout_marginStart="25dp"
            app:layout_constraintTop_toBottomOf="@id/textview_studentCompanySelectionPriorityCardview_companyName"
            app:srcCompat="@drawable/ic_locationjobdetails"
            />

        <TextView
            android:id="@+id/textview_studentCompanySelectionPriorityCardview_companyLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="Surat"
            android:textSize="@dimen/font18"
            app:layout_constraintStart_toEndOf="@+id/imageView_studentCompanySelectionPriorityCardview_locationimg"
            app:layout_constraintTop_toBottomOf="@+id/textview_studentCompanySelectionPriorityCardview_companyName" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>